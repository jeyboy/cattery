.row{class: "#{('persisted' if f.object.persisted?)} #{('main' if f.object.main)}"}
  .large-3.medium-3.small-3.columns
    = f.object.main ? 'Main' : 'Slave'
    = f.hidden_field :main
  .large-6.medium-6.small-6.columns
    - if f.object.persisted?
      = image_tag f.object.pict.url
      = f.hidden_field :pict
    - else
      = f.file_field :pict
    = f.hidden_field :pict_cache
  .large-3.medium-3.small-3.columns

    = link_to '#', class: 'button radius cat_pict_del' do
      .show-for-small-only
        = image_tag 'delete-icon-tiny.png'
      .hide-for-small-only
        = image_tag 'delete-icon-small.png'
        Delete

    = f.hidden_field :_destroy, value: false
  %hr