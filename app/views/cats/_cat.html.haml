%ul.pricing-table
  - if show_controls
    %li.title.text-center
      .right
        = link_to [:admin, cat], method: :delete, prompt: 'Are you sure what you want to delete this cat ?' do
          = image_tag 'delete-icon-small.png'

      .left
        = link_to [:admin, cat] do
          = image_tag 'edit-icon-small.png'

      .overlay= cat.name
  - else
    %li.title= cat.name

  %li.bullet-item
    = image_tag((cat.cat_picts.first.pict.url rescue PictureUploader::default_pict))

  -#%li.price $99.99
  - if cat.title
    %li.description
      %strong Title:
      = cat.title.name

  - if cat.breed
    %li.bullet-item
      %strong Breed:
      = cat.breed.name

  - if cat.color
    %li.bullet-item
      %strong Color:
      = cat.color.name

  - if cat.breeder
    %li.bullet-item
      %strong Breeder:
      = cat.breeder

  - if cat.owner
    %li.bullet-item
      %strong Owner:
      = cat.owner

  %li.cta-button
    %a.radius.button{href: '#'} Fotoalbum