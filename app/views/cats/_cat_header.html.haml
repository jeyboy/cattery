= content_for :cat_edit_button, flush: true do
  = link_to [:admin, cat] do
    = image_tag 'edit-icon-small.png'

= content_for :cat_title, flush: true do
  = cat.name

= content_for :cat_delete_button, flush: true do
  = link_to [:admin, cat], method: :delete, confirm: 'Are you sure what you want to delete this cat ?' do
    = image_tag 'delete-icon-small.png'

%ul.small-block-grid-1.medium-block-grid-3.large-block-grid-3.visible-for-small-only
  %li= yield :cat_edit_button

  %li.text-breaker= yield :cat_title

  %li= yield :cat_delete_button

.row.show-for-medium-up
  .large-2.medium-3.small-4.columns= yield :cat_edit_button

  .large-8.medium-6.small-4.columns.text-breaker= yield :cat_title

  .large-2.medium-3.small-4.columns= yield :cat_delete_button