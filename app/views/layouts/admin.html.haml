!!!
%html
  %head
    %title Cattery
    = stylesheet_link_tag    'admin', media: 'all'
    = javascript_include_tag 'admin'
    = csrf_meta_tags
  %body
    .fixed
      %nav.top-bar{'data-topbar' => '', role: 'navigation'}
        %ul.title-area
          %li.ico= image_tag 'ico_small.png'
          / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
          %li.toggle-topbar.menu-icon
            = link_to  '#' do
              %span Menu

        %section.top-bar-section
          / Right Nav Section
          %ul.right
            %li.cats.has-dropdown
              = link_to 'Cats', '#'
              %ul.dropdown
                %li.new=    link_to 'New Cat', [:new, :admin, :cat]
                %li.index=  link_to 'Cats List', [:admin, :cats]

            %li.titles.has-dropdown
              = link_to 'Titles', '#'
              %ul.dropdown
                %li.new=    link_to 'New Title', [:new, :admin, :title]
                %li.index=  link_to 'Titles List', [:admin, :titles]


            %li.colors.has-dropdown
              = link_to 'Colors', '#'
              %ul.dropdown
                %li.new=    link_to 'New Color', [:new, :admin, :color]
                %li.index=  link_to 'Colors List', [:admin, :colors]

            %li.breeds.has-dropdown
              = link_to 'Breed', '#'
              %ul.dropdown
                %li.new=    link_to 'New Breed', [:new, :admin, :breed]
                %li.index=  link_to 'Breeds List', [:admin, :breeds]

          / Left Nav Section
          %ul.left
            %li.dashboard=  link_to 'Dashboard', [:admin, :dashboard]
            %li.messages=   link_to 'Messages', [:admin, :messages]

    = render 'layouts/flashes'

    = yield

    .row.panel.footer
      %ul.side-nav.inline-list= yield :main_menu

    :javascript
      $(document).foundation();