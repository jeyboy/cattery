# encoding: UTF-8

!!!
%html
  %head
    %title Cattery
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    = content_for :main_menu do
      = render partial: 'layouts/menu'

    .row
      %ul.inline-list.right
        %li= link_to 'Home', root_path
        %li= link_to 'Contacts', '#'

    .row.panel
      .large-4.medium-4.small-4.columns.panel.text-center
        %h3 Welcome to Foundation
      .large-4.medium-4.small-4.columns.panel.text-center
        %h2 Welcome to Foundation
      .large-4.medium-4.small-4.columns.panel.text-center
        %h1 Welcome to Foundation
    .row.panel
      .large-3.medium-3.small-3.columns.panel
        %ul.side-nav= yield :main_menu

      .large-9.medium-9.small-9.columns.panel
        = yield

    .row.panel.footer
      %ul.side-nav.inline-list= yield :main_menu

    :javascript
      $(document).foundation();